<!DOCTYPE html>
<html>
	<head>
		<meta charset = "utf-8" />
	</head>
	<style>
		*{
			box-sizing:border-box;
			margin: 0;
			padding: 0;
		}

		nav{
			display:flex;
			flex-direction:row;
		}

		nav > div{
			padding-right:10px;
		}

		.flex-row{
			display:flex;
			flex-direction:row;
			margin-top:30px;
		}

		.container-book{
			border:1px solid black;
			margin:0 10px 0 0;
		}
	</style>
	<body>
		<nav>
			<div><a href = "/home">Home</a></div>
			<div><a href = "/book-list">Book List</a></div>
			<div><a href = "/about">About</a></div>
			<div><a href = "/login">Login</a></div>
		</nav>
		<div class = "flex-row" >

			<% for(var i = 0; i < result.length; i++) { %>
				<a href = "/book-detail/<%= result[i].code %>">
					<div class = "container-book">
							<img src = "<%= result[i].path_img %>"  width = "100" height = "100"/><br />
							Title : <%= result[i].title %><br />
							Author: <%= result[i].author %><br />
							Year  : <%= result[i].year %><br />
							Status: <%= result[i].rent_status %><br />
						<br />
					</div>
				</a>
			<% } %>
		</div>
	</body>
</html>
