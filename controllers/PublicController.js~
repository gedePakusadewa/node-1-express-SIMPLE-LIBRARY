const mongoose = require('mongoose');
const bookList = require('../models/book-list');
const db = require('../models/database');

module.exports = {
	getBookListView:function(req, res){
		console.log('getBookListView');
		bookList.find({})
		.then(result => {
			res.send('book-list', {result : result});
		})
		.catch( err => {
			console.log(err);
		})
	},

	setDataBookList:function(req, res){
		const dat = new bookList({
			code: "apq016",
			title: "Desk Is Dead Now",
			author: "Pqy Huyyh",
			pages: "32",
			year: "2019",
			rent_status: false,
			path_img: "/cover/apq016.jpg"

		});

		dat.save(dat)
		.then(result =>{
			console.log(result);	
		})
		.catch(err => {
			console.log(err);
		});
	}

};
